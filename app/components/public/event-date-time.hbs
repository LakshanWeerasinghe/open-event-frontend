{{#if @event.isSingleDay}}
  {{general-date @event.startsAt "dddd, D MMMM, YYYY" tz=@timezone}}
  {{#unless @noBreak}}
    <br>
  {{/unless}}
  {{general-date @event.startsAt 'time-short' tz=@timezone}} {{t 'to'}} {{general-date @event.endsAt 'time-short' tz=@timezone}} 
{{else}}
  {{general-date @event.startsAt 'date-time-long' tz=@timezone}} {{t 'to'}} {{general-date @event.endsAt 'date-time-long' tz=@timezone}} 
{{/if}}
{{general-date @event.startsAt 'tz'  tz=@timezone}}
