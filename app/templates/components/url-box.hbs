<div class="ui action input" style="width: 100%; height: 36px">
  <input class="truncate" style="flex: 1 0 !important" type="text" value={{@url}} placeholder={{@url}} readonly>
  <UiPopup @on="click" @content={{t "Link copied to clipboard"}} @position="bottom right">
    <CopyButton @clipboardText={{@url}} @class="ui icon button rounded-none m-0" data-tooltip="Copy Link">
      <i class="copy icon"></i>
    </CopyButton>
  </UiPopup>
  <a 
    id="public_url"
    href="{{@url}}" 
    target="_blank" rel="noopener" data-tooltip="Go to Link">
    <div  class="ui teal icon button ml-auto rounded-l-none m-0">
      <i class="external icon" ></i>
    </div>
  </a>
</div>
