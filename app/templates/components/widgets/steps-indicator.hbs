<div class="ui {{ui-grid-number this.processedSteps.length}} steps">
  {{#each this.processedSteps as |step index|}}
    <a class="{{if (eq this.currentIndex index) 'active'}} {{if step.isDisabled 'disabled'}}  step" href="{{unless this.disableLinks (href-to step.route)}}">
      <i class="{{step.icon}}"></i>
      <div class="content">
        <div class="title">{{step.title}}</div>
        <div class="description">{{step.description}}</div>
      </div>
    </a>
  {{/each}}
</div>
<style>
  .ui.steps .step:after {
    width: 0;
    height: 0;
  }
</style>
